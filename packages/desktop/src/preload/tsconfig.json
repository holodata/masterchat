{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./*"]
    }
  },
  "files": ["./index.ts"],
  "exclude": ["**/node_modules", "**/.*"],
  "include": ["../../types/**/*.d.ts", "./types/*.d.ts"]
}
